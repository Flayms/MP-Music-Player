<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ViewModels="clr-namespace:MP_Music_Player.ViewModels"
             x:Class="MP_Music_Player.Views.Pages.TrackDetailsPage"
             Title="Track Details"
             x:DataType="ViewModels:TrackDetailsViewModel">
  <!--todo: display more beautifully and maybe make tags editable here-->
  <VerticalStackLayout>
    <Label Text="FileName:" HorizontalOptions="Center" />
    <Label Text="{Binding FileName}" HorizontalOptions="Center" />

    <Label Text="FilePath:" HorizontalOptions="Center" />
    <Label Text="{Binding FilePath}" HorizontalOptions="Center" />

    <Label Text="Title:" HorizontalOptions="Center" />
    <Label Text="{Binding Title}" HorizontalOptions="Center" />

    <Label Text="Artists:" HorizontalOptions="Center" />
    <Label Text="{Binding Artists}" HorizontalOptions="Center" />

    <Label Text="Genre:" HorizontalOptions="Center" />
    <Label Text="{Binding Genres}" HorizontalOptions="Center" />

    <Label Text="Album:" HorizontalOptions="Center" />
    <Label Text="{Binding Album}" HorizontalOptions="Center" />
  </VerticalStackLayout>
</ContentPage>